<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      d:DesignWidth="1500" d:DesignHeight="900">
  <Grid.Background>
    <ImageBrush ImageSource="GUI/mainmenu3.bmp"/>
  </Grid.Background>
  <Grid.RowDefinitions>
    <RowDefinition Height="300*"/>
    <RowDefinition Height="300*"/>
    <RowDefinition Height="100*"/>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="50*"/>
    <ColumnDefinition Width="300*"/>
    <ColumnDefinition Width="60*"/>
  </Grid.ColumnDefinitions>
  <Image Grid.Column="1" Source="GUI/title.png" VerticalAlignment="Center" />
  <Viewbox Stretch="Uniform" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" MaxHeight="200">
    <StackPanel>
      <Button Content="Start Game" Margin="0 0 0 10" Height="50" Width="600" FontSize="18"/>
      <Button Content="Settings" Margin="0 0 0 10" Height="50" Width="600" FontSize="18"/>
    </StackPanel>
  </Viewbox>
</Grid>